<script type="text/javascript">
    //#region 註冊URL
    var url = {};
    url.getAllData = '@Url.Action("GetD70AllData", "D7")';
    url.getData = '@Url.Action("GetD70Data", "D7")';
    url.getA52 = '@Url.Action("GetA52Data", "D7")';
    url.getA51 = '@Url.Action("GetA51Data", "D7")';
    url.saveData = '@Url.Action("SaveD70", "D7")';
    url.deleteData = '@Url.Action("DeleteD70", "D7")';
    url.sendToAudit = '@Url.Action("SendD70ToAudit", "D7")';
    url.audit = '@Url.Action("D70Audit", "D7")';
    //#endregion 註冊URL

    $(function () {
        //#region
        if ($("#spanIsSender").html() != "Y") {
            $("#btnAdd").hide();
        }
        //#endregion

        //#region SetDefault
        $("#editRating_Threshold_Map_Grade").append("<option value=' '> </option>");
        $("#editRating_from_Map_Grade").append("<option value=' '> </option>");
        $("#editRating_To_Map_Grade").append("<option value=' '> </option>");

        $("#editRating_Threshold_Map_Grade_Adjust").append("<option value=' '> </option>");
        $("#editRating_from_Map_Grade_Adjust").append("<option value=' '> </option>");
        $("#editRating_To_Map_Grade_Adjust").append("<option value=' '> </option>");
        //#endregion

        //#region 註冊click事件
        $('input:button').each(function () {
            var id = $(this).attr('id');
            switch (id) {
                case 'btnReset':
                    $("#" + id).on('click', function () { SearchReset(); });
                    break;
                case 'btnSearch':
                    $("#" + id).on('click', function () { SearchData(); });
                    break;
                case 'btnAdd':
                    $("#" + id).on('click', function () { AddData(); });
                    break;
                case 'btnSave':
                    $("#" + id).on('click', function () { SaveData(); });
                    break;
                case 'btnCancel':
                    $("#" + id).on('click', function () { $("#dialogEdit").dialog("close"); });
                    break;
                case 'btnDelete':
                    $("#" + id).on('click', function () { DeleteData(); });
                    break;
                case 'btnSendToAudit':
                    $("#" + id).on('click', function () { SendToAudit(); });
                    break;
                case 'btnAudit':
                    $("#" + id).on('click', function () { AuditData("2"); });
                    break;
                case 'btnReject':
                    $("#" + id).on('click', function () { AuditData("3"); });
                    break;
            }
        })
        //#endregion 註冊click事件

        //#region SearchReset
        function SearchReset() {
            $('#Rule_ID').val("");
            $('#Status').val("");
            $('#IsActive').val("");
        }
        //#endregion

        var ProgramID = "D71";
        //#region SearchData
        function SearchData() {
            var ruleID = $('#Rule_ID').val().trim();
            var status = $('#Status').val().trim();
            var isActive = $('#IsActive').val().trim();

            var obj = {
                Rule_ID: ruleID,
                Status: status,
                IsActive: isActive
            };

            showJqgrid("2", obj);
        }
        //#endregion

        //#region 去controller 撈取資料並且用JqGrid套件顯示
        function showJqgrid(type, obj) {
            clearJqgrid();

            var title = '@ViewBag.Title'; //標頭
            var urlString = "";

            switch (type) {
                case "1":
                    urlString = url.getAllData;
                    break;
                case "2":
                    urlString = url.getData;
                    break;
            }

            $.ajax({
                type: "POST",
                data: JSON.stringify({
                    type: ProgramID,
                    dataModel:obj
                }),
                dataType: "json",
                url: urlString,
                contentType: 'application/json',
                error: function () {
                    alert("請重新登入!");
                }
            })
            .done(function (result) {
                    if (result.RETURN_FLAG) {
                        var data = result.Datas.Data;

                        createJqgrid("list1", "pager1", data, title);
                    }
                    else {
                        toastr.error(result.DESCRIPTION);
                    }
            });
        }
        //#endregion

        //#region clearJqgrid (清除JqGrid)
        function clearJqgrid() {
            $('#jqgridDiv').children().remove();
        }
        //#endregion clearJqgrid

        //#region createJqgrid (建立JqGrid套件)
        //listId (Jqgrid產生table的ID)
        //pagerId (下方產生筆數的ID)
        //data (要秀的資料Json型別Data)
        //title (標題)
