    function getA52(ratingType) {
        var rating = "";
        var ratingName = "";
        var selectName = "";

        switch (ratingType)
        {
            case "":
                ratingName = "editRating_Threshold";
                selectName = "editRating_Threshold_Map_Grade";
                break;
            case "from":
                ratingName = "editRating_from";
                selectName = "editRating_from_Map_Grade";
                break;
            case "to":
                ratingName = "editRating_To";
                selectName = "editRating_To_Map_Grade";
                break;
        }

        if ($("#" + ratingName).val() != null) {
            rating = $("#" + ratingName).val().trim();
        }

        $("#" + selectName + " option").remove();
        $("#" + selectName).append("<option value=' '> </option>");

        if (rating != "") {
            $.ajax({
                type: "POST",
                data: JSON.stringify({
                    ratingOrg: "SP",
                    pdGrade: "",
                    rating: rating
                }),
                dataType: "json",
                async: false,
                url: url.getA52,
                contentType: 'application/json'
            })
            .done(function (result) {
                if (result.RETURN_FLAG) {
                    var data = result.Datas.Data;
                    for (var i = 0; i < data.length; i++) {
                        $("#" + selectName).append("<option value='" + data[i].PD_Grade + "'>" + data[i].PD_Grade + "</option>");
                    }

                    if (data.length > 0) {
                        $("#" + selectName).prop('selectedIndex', 1);
                    }
                }
                else {
                    toastr.error(result.DESCRIPTION);
                }
            });
        }
    }
