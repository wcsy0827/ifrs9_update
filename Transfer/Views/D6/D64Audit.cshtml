                                }
                                if($(this).attr('id').indexOf('Confirm') > -1)
                                {
                                    $(this).off('click');
                                    $(this).on('click',
                                        function () { D64EvaluationClick(Reference_Nbr, Assessment_Result_Version,'@Ref.Evaluation_Status_Type.ReviewCompleted.GetDescription()',"Confirm") });
