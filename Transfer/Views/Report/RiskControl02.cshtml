@{
    ViewBag.Menu = "ReportMain";
    ViewBag.SubMenu = "ReportRiskControl02Sub";
    ViewBag.Title = "投資標的信用風險預警彙總表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" id="main">
    <div class="row main_hand">
        <div class="col-md-12 main_hand_div">
            <form id="myForm">
                <table>
                    <tr>
                        <td style="width:550px; " >
                            <label>基準日 : </label>
                            <input type="text" id="datepicker" name="datepicker">
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top:15px">
                            <input type="button" class="btn btn-primary" value="投資標的信用風險預警彙總表" id="btnReport" />
                        </td>
                    </tr>
                </table>
            </form>
            <i class="fa fa-exclamation-circle title" style="font-size:24px;"
               alt="投資標的信用風險預警彙總表"></i>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {

        //#region 註冊URL
        var url = {};
        url.report = '@Url.Action("GetReport","Common")';
        //#endregion 註冊URL

        created.createDatepicker('datepicker', false, null);

        verified.datepicker("myForm", "datepicker", false);
        //#region 註冊click事件
        $('input:button').each(function () {
            var id = $(this).attr('id');
            switch (id) {
                case 'btnReport':
                    $("#" + id).click(report);
                    break;
            }
        })
        //#endregion 註冊click事件

        function report()
        {
            if ($('#myForm').valid())
            {
                var parms = [];
                parms.push(customerUtility.reportParm('reportDate', $('#datepicker').val()));
                customerUtility.report(
                    customerUtility.reportModel('投資標的信用風險預警彙總表', 'RiskControl02'),
                    parms,
                    parms
                    );
            }
        }
    });
</script>