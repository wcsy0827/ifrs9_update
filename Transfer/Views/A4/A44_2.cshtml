        //20200922 alibaba 儲存新券面額 202008210166-00
        function SaveData()
        {
            var grid = $("#list1");
            var rowKey = grid.getGridParam("selrow");
            var r = /^\+?[1-9][0-9]*$/;
            if (!r.test($('#editBond_OriAmount_New').val())  )
